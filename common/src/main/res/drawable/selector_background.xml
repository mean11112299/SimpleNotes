<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--bình thường-->
    <item android:state_pressed="false" android:drawable="@android:color/transparent"/>

    <!--kích hoạt-->
    <item android:state_pressed="true"  android:drawable="@color/app_control_highlight_background" />
    <item android:state_focused="true" android:drawable="@color/app_control_highlight_background" />
    <item android:state_hovered="true"  android:drawable="@color/app_control_highlight_background" />

    <item android:state_selected="true" android:drawable="@color/app_control_highlight_background" />
    <item android:state_activated="true" android:drawable="@color/app_control_highlight_background" />

</selector>