<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Nguồn: https://www.google.com/design/spec/components/lists.html-->

    <!--list item, title lớn-->
    <!--padding top, bottom mỗi dòng-->
    <dimen name="app_list_item_padding">16dp</dimen>
    <!--ảnh đầu mỗi dòng-->
    <dimen name="app_list_item_icon_size">40dp</dimen><!--Không sử dụng-->
    <dimen name="app_list_item_icon_width">72dp</dimen>
    <dimen name="app_list_item_icon_padding_left">16dp</dimen>
    <dimen name="app_list_item_icon_padding_right">16dp</dimen>
    <!--ảnh thông tin cuối-->
    <dimen name="app_list_item_sub_item_size">24dp</dimen><!--Không sử dụng-->
    <dimen name="app_list_item_sub_item_width">56dp</dimen>
    <dimen name="app_list_item_sub_icon_padding_left">16dp</dimen>
    <dimen name="app_list_item_sub_icon_padding_right">16dp</dimen>

    <!--list-->
    <!--list content-->
    <style name="app_list_item_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/app_list_item_padding</item>
        <item name="android:paddingBottom">@dimen/app_list_item_padding</item>
    </style>

    <!--list icon-->
    <style name="app_list_item_icon">
        <item name="android:layout_width">@dimen/app_list_item_icon_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/app_list_item_icon_padding_left</item>
        <item name="android:paddingRight">@dimen/app_list_item_icon_padding_right</item>
    </style>

    <!--list title (text)-->
    <style name="app_list_item_title">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--list sub icon (right icon)-->
    <style name="app_list_item_sub_icon">
        <item name="android:layout_width">@dimen/app_list_item_sub_item_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/app_list_item_sub_icon_padding_left</item>
        <item name="android:paddingRight">@dimen/app_list_item_sub_icon_padding_right</item>
    </style>


    <!--list nhỏ-->
    <!--ảnh đầu mỗi dòng-->
    <dimen name="app_list_small_item_icon_size">24dp</dimen><!--Không sử dụng-->
    <dimen name="app_list_small_item_icon_padding_left">16dp</dimen>
    <dimen name="app_list_small_item_icon_padding_right">32dp</dimen>
    <!--ảnh thông tin cuối-->
    <dimen name="app_list_small_item_sub_item_size">16dp</dimen><!--Không sử dụng-->
    <dimen name="app_list_small_item_sub_item_width">40dp</dimen>
    <dimen name="app_list_small_item_sub_icon_padding_left">8dp</dimen>
    <dimen name="app_list_small_item_sub_icon_padding_right">16dp</dimen>

    <!--list content-->
    <style name="app_list_small_item_content" parent="app_list_item_content">

    </style>

    <!--list icon-->
    <style name="app_list_small_item_icon" parent="app_list_item_icon">
        <item name="android:paddingLeft">@dimen/app_list_small_item_icon_padding_left</item>
        <item name="android:paddingRight">@dimen/app_list_small_item_icon_padding_right</item>
    </style>

    <!--list title (text)-->
    <style name="app_list_small_item_title" parent="app_list_item_title">

    </style>

    <!--list sub icon (right icon)-->
    <style name="app_list_small_item_sub_icon" parent="app_list_item_sub_icon">
        <item name="android:layout_width">@dimen/app_list_small_item_sub_item_width</item>
        <item name="android:paddingLeft">@dimen/app_list_small_item_sub_icon_padding_left</item>
        <item name="android:paddingRight">@dimen/app_list_small_item_sub_icon_padding_right</item>
    </style>



</resources>