    &lt;!&ndash;Title + Input Type&ndash;&gt;
    &lt;!&ndash;Dùng cho nhóm Input - Gồm cả Title+Input&ndash;&gt;
    <style name="app_form_content">
        <item name="android:paddingBottom">@dimen/app_form_padding_bottom</item>
    </style>

    &lt;!&ndash;Icon + Input Form&ndash;&gt;
    <style name="app_form_icon">
        <item name="android:layout_width">@dimen/app_form_icon_size</item>
        <item name="android:layout_height">@dimen/app_form_icon_size</item>
        <item name="android:layout_marginTop">@dimen/app_form_padding_top</item>
        <item name="android:layout_marginLeft">@dimen/app_form_padding_horizontal</item>
        <item name="android:layout_marginRight">@dimen/app_form_padding_horizontal</item>
    </style>


    &lt;!&ndash;Dùng cho label của Input&ndash;&gt;
    <style name="app_form_label" parent="app_form_label_clear">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    &lt;!&ndash;dùng cho label của Input Clear&ndash;&gt;
    <style name="app_form_label_clear">
        <item name="android:paddingTop">@dimen/app_form_padding_top</item>
        <item name="android:textSize">@dimen/app_text_caption</item>
        <item name="android:textColor">@color/app_text_hint_disabled.light</item>
    </style>

    &lt;!&ndash;dùng cho mọi input&ndash;&gt;
    <style name="app_form_input_clear">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/selector_text_color</item>
        <item name="android:background">@drawable/selector_background</item>
        <item name="android:gravity">start|fill_vertical</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">@dimen/app_form_padding_top</item>
        <item name="android:paddingBottom">@dimen/app_form_padding_bottom</item>
    </style>

